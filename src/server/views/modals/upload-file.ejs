<div class="modal custom-modal" id="upload-file-modal">
  <div class="modal-dialog" role="document">
    <form id="uploadform" class="modal-content" action="./upload" method="post" enctype="multipart/form-data">
      <div class="modal-header">
        <h5 class="modal-title">Upload corpus</h5>
        <button type="button" class="close" aria-label="Close" name="close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>

      <div class="modal-body">
        <span title="Select a file to upload to the server">
          <u>Choose and upload file</u>
          <input type="file" name="file" id="upload-filename" />
        </span>

        <!--
          <progress id="fileUploadProgressBar" value="0" max="100"></progress>
          <div id="uploadFileSize">Size:</div>
          <div id="errorUploadFileSize">ERROR: File exceeds local storage quota.</div>
          <div>
            Treebank size: <span id="treebankSize"></span>
            Available space: <span id="localStorageAvailable"></span>
          </div>
        -->
      </div>

      <div class="modal-footer">
        <button type="submit" name="submit" class="btn btn-primary" disabled>Upload</button>
        <button type="button" name="close" class="btn btn-secondary">Cancel</button>
      </div>
    </form>
  </div>
</div>
